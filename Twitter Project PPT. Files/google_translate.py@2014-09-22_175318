from xgoogle.translate import Translator,TranslationError,DetectionError,LanguageDetector 
import pprint

def g_trans():

    try:
        translate = Translator().translate
        str = "今からauショップ行って予約してたiphone6取ってくる♡♡念願のiphoneテンションあがるっ！٩(๑òωó๑)۶"
        decoded_string = str.encode('utf8', 'ignore').strip().replace("\'", r"\'")
        trans = translate(decoded_string)
        file = open('translates_text.txt', 'a')
        #pretty = pprint.pprint(trans)
        file.write(pretty)
        pprint.pprint(trans)
        file.close()

    except TranslationError, e:
        pprint.pprint(e) 
        
def g_detect():

    try:
        detect = LanguageDetector().detect
        str1 = "mi nombre es gonsalves anthony"
        decode = str1.encode('utf8', 'ignore').strip().replace("\'", r"\'")    
        det = detect(decode)
        pprint.pprint(det)
    
    except DetectionError, e:
        pprint.pprint(e)        
        
g_trans()        
     